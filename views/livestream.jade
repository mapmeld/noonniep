head
  title Noonniep Livestream
  script(src="/socket.io/socket.io.js", type="text/javascript")
  
  link(type="text/css", rel="stylesheet", href="/stylesheets/journal.min.css")
  link(type="text/css", rel="stylesheet", href="/stylesheets/codemirror.css")
  style(type="text/css") a{ color:#44a; } .navbar{ zoom: 0.6; } .CodeMirror {border: 2px inset #dee;} .CodeMirror-scroll{ height: auto; overflow: visible; } .popover-title{ font-size: 18px; }

body
  div.navbar
    .navbar-inner
      .container
        a.btn.btn-navbar(data-toggle="collapse", data-target=".nav-collapse")
          span.icon-bar
          span.icon-bar
          span.icon-bar
    
        a.brand(href="/") Noonniep
        a.brand(href="/code-env", style="text-transform:none;") Code Editor
        a.brand(href="/livestream", style="text-transform:none;") Livestream

  div.container
    .row
      .span7
        h3 Watch Robot
        iframe(src="http://www.ustream.tv/embed/9893969", width="500", height="350", scrolling="no", frameborder="0", style="border: 0px none transparent;")
        br
        h3 Data Stream
        ul#livedata(style="margin-left:-30px;border:1px solid #000;padding:6px;height:400px;overflow-y:scroll;")
      .span5
        h4#codename Program: #{program.name}
        div#sketchholder
          textarea#sketchplace #{program.code}
        p
          span Code highlighting by&nbsp;
          a(href="http://codemirror.net/", target="_blank") CodeMirror        
        br
        br
        #graph(style="width:100%;height:300px;")
        p
          span Updated in realtime by&nbsp;
          a(href="http://socket.io", target="_blank") socket.io

    br
    br

  script(src="http://code.jquery.com/jquery-1.9.1.min.js", type="text/javascript")
  script(type="text/javascript", src="/scripts/codemirror.js")
  script(type="text/javascript", src="/scripts/clike.js")
  script(src="/scripts/highcharts.js", type="text/javascript")
  script(src="/scripts/livestream.js", type="text/javascript")